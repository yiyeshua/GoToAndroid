<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipChildren="false"
    android:clipToPadding="false"
    tools:context="com.pili.gotome.MainActivity">
    <FrameLayout
        android:id="@+id/content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/bottombar"
        android:background="@android:color/darker_gray"
        ></FrameLayout>
    <RadioGroup
        android:id="@+id/bottombar"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:clipChildren="false"
        android:clipToPadding="false"
        >
        <RadioButton
            android:id="@+id/home"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="主页"
            android:button="@null"
            android:drawableTop="@drawable/selector_home"
            android:layout_weight="1"
            android:layout_margin="2dp"
            android:padding="2dp"
            android:gravity="center"
            android:textColor="@color/selector_textcolor"
            android:textSize="12sp"
            />
        <RadioButton
            android:id="@+id/diary"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="日记"
            android:button="@null"
            android:drawableTop="@drawable/selector_diary"
            android:layout_weight="1"
            android:layout_margin="2dp"
            android:padding="2dp"
            android:gravity="center"
            android:textColor="@color/selector_textcolor"
            android:textSize="12sp"
            />
        <RadioButton
            android:id="@+id/add"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:translationY="-10sp"
            android:button="@null"
            android:layout_weight="1"
            android:background="@drawable/selector_add"
            />
 <!--       android:drawableTop="@drawable/selector_home"
 android:text="添加"
        android:layout_weight="1"
        android:layout_margin="2dp"
        android:padding="2dp"
        android:gravity="center"
        android:textColor="@color/selector_textcolor"
        android:textSize="12sp"-->
        <RadioButton
            android:id="@+id/meizi"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="妹子"
            android:button="@null"
            android:drawableTop="@drawable/selector_meizi"
            android:layout_weight="1"
            android:layout_margin="2dp"
            android:padding="2dp"
            android:gravity="center"
            android:textColor="@color/selector_textcolor"
            android:textSize="12sp"
            />
        <RadioButton
            android:id="@+id/setting"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="设置"
            android:button="@null"
            android:drawableTop="@drawable/selector_setting"
            android:layout_weight="1"
            android:layout_margin="2dp"
            android:padding="2dp"
            android:gravity="center"
            android:textColor="@color/selector_textcolor"
            android:textSize="12sp"
            />
        </RadioGroup>
</RelativeLayout>
